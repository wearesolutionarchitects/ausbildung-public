// Alle Tags sammeln und die HÃ¤ufigkeit berechnen
const tagData: Record<string, { count: number; years: Set<string>; apTypes: Set<string> }> = {};

docs.forEach(doc => {
  console.log(`ðŸ“„ Dokument geladen: ${doc.id}`);
  const tags = (doc.data as any).tags;

  if (!tags || !Array.isArray(tags)) {
    console.warn(`âš  Keine Tags in Dokument: ${doc.id}`);
    return; // Falls keine Tags vorhanden, Ã¼berspringen
  }

  console.log(`ðŸ· Tags gefunden:`, tags);

  const yearTags = tags.filter(tag => /^\d{4}$/.test(tag)); // Extrahiere nur Jahreszahlen
  console.log("ðŸ“† Erkannte Jahres-Tags:", yearTags);

  const apType = tags.includes("AP1") ? "AP1" : tags.includes("AP2") ? "AP2" : "Unbekannt";

  tags.forEach(tag => {
    if (!tagData[tag]) {
      tagData[tag] = { count: 0, years: new Set(), apTypes: new Set() };
    }
    tagData[tag].count++;
    yearTags.forEach(year => tagData[tag].years.add(year));
    tagData[tag].apTypes.add(apType);
  });
});

console.log("ðŸ“Š Gesammelte Tag-Daten:", tagData);

// Sortiere Tags nach HÃ¤ufigkeit
const sortedTags = Object.entries(tagData)
  .sort((a, b) => b[1].count - a[1].count);

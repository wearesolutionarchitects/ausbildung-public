---
// src/components/Tags.astro
export interface Props {
    tags: string[];
}
const { tags } = Astro.props;
---

<div class="tags">
    {tags.map(tag => (
        <span class="tag">{tag}</span>
    ))}
</div>

<style>
    .tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }
    .tag {
    background-color: #e8e8e8;
    padding: 0.2rem 0.6rem;
    border-radius: 0.25rem;
    font-size: 0.8rem;
    }
</style>

<div class="tags">
    {tags.map(tag => (
        <span class="tag">{tag}</span>
    ))}
</div>
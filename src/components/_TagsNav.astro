---
export interface Props {
    tags?: string[];
}
const { tags } = Astro.props;
---

{tags?.length ? (
    <nav class="tags-nav">
        {tags.map(tag => (
            <a href={`/tags#${tag}`}>{tag}</a>
    ))}
    </nav>
) : null}

<style>
    .tags-nav {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }

    .tags-nav a {
        background: #f0f0f0;
        padding: 0.2rem 0.6rem;
        border-radius: 0.25rem;
        text-decoration: none;
        color: inherit;
  }
</style>